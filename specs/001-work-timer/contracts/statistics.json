{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "时间统计",
  "description": "按天、周、月维度聚合的工作记录统计",
  "type": "object",
  "properties": {
    "task_id": {
      "type": "integer",
      "description": "任务 ID"
    },
    "task_name": {
      "type": "string",
      "description": "任务名称"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "统计日期（天维度，YYYY-MM-DD）"
    },
    "week_start": {
      "type": "string",
      "format": "date",
      "description": "周开始日期（周维度，YYYY-MM-DD）"
    },
    "month": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}$",
      "description": "月份（月维度，YYYY-MM）"
    },
    "total_duration": {
      "type": "integer",
      "description": "总持续时间（秒）"
    },
    "percentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "时间占比（0-100）"
    }
  },
  "required": ["task_id", "task_name", "total_duration", "percentage"],
  "version": "1.0.0"
}

