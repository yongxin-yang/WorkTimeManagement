{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "数据导出格式",
  "description": "用于导入/导出的完整数据格式",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "数据格式版本号",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "exported_at": {
      "type": "integer",
      "description": "导出时间（Unix 时间戳，秒）"
    },
    "tasks": {
      "type": "array",
      "items": {
        "$ref": "./task.json"
      },
      "description": "任务列表"
    },
    "work_records": {
      "type": "array",
      "items": {
        "$ref": "./work_record.json"
      },
      "description": "工作记录列表"
    }
  },
  "required": ["version", "exported_at", "tasks", "work_records"],
  "version": "1.0.0"
}

